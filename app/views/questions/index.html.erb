<% provide :page_title, 'Questions' %>
<% currently_at 'Questions' %>

<h1 class="mb-4">Questions</h1>

<%= link_to 'New question', new_question_path, class: 'btn btn-primary btn-lg' %>

<%= pagination @questions %>


<% @questions.each do |question| %>
  <% question = question.decorate %>
  <article class="card mt-3">
    <div class="card-body">
      <h4><%= question.title %></h2>

      <section class="card-text">
        <time datetime="<%= question.formatted_created_at %>">
          <small><%= question.formatted_created_at %></small>
        </time>

        <p class="my-2">
          <%= truncate strip_tags(question.body), length: 150, omission: '...(continued)' %>
        </p>
      </section>

     <div class="btn-group" role="group" aria-label="Question actions">
    <%= link_to 'Show', question_path(question), class: 'btn btn-primary me-2' %> 
    <%= link_to 'Edit', edit_question_path(question), class: 'btn btn-secondary me-2' %>
    <%= button_to 'Destroy', question_path(question), class: 'btn btn-danger', method: :delete, data: {confirm: 'Are you sure?'} %>
    </div>
    </div>
  </article>
<% end %>

<%= pagination @questions %>
